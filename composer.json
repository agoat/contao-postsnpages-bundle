{
    "name": "agoat/contao-postsnpages",
    "type": "contao-bundle",
    "description": "Contao Posts'n'Pages Extension",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Arne Stappen",
            "homepage": "https://github.com/agoat"
        }
    ],
    "require": {
        "php": ">=7.0",
        "symfony/framework-bundle": "~2.8|~3.0",
        "contao/core-bundle": "^4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "suggest": {
        "agoat/contao-permalink": "Easy posts and page url handling"
    },
    "autoload": {
        "psr-4": {
            "Agoat\\PostsnPagesBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config",
            "src/Resources/contao/dca",
            "src/Resources/contao/languages",
            "src/Resources/contao/templates"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Agoat\\PostsnPagesBundle\\Test\\": "tests/"
        }
    }
}
